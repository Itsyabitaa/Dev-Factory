{
  "name": "devfactory",
  "version": "1.0.0",
  "description": "DevFactory â€“ scaffold and run local dev projects",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "watch": "node ./node_modules/typescript/bin/tsc -w",
    "start": "npm run build && electron .",
    "dev": "npm run build && (npm run watch & electron .)",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && node -e \"const fs=require('fs'); const p='release'; if(fs.existsSync(p)) fs.rmSync(p,{recursive:true});\" && electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.devfactory.app",
    "productName": "DevFactory",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^34.1.0",
    "electron-builder": "^25.1.8",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "sudo-prompt": "^9.2.1",
    "electron-updater": "^6.3.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Itsyabitaa/Dev-Factory.git"
  }
}